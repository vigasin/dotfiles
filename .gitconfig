[user]
	name = Ivan Vigasin
	email = ivigasin@gmail.com

[color]
	ui = true

[core]
	editor = nvim
	filemode = false
	excludesfile = /Users/ivigasin/.gitignore_global
    pager = delta

[alias]
	aa = !git add -u && git add . && git status
	ap = add -p
	cm = commit -m
    id = describe --abbrev=12 --always --dirty=+
    st = status
    d = diff
    dc = diff --cached

[push]
	default = simple

[apply]
	whitespace = nowarn

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[init]
	defaultBranch = master

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true


    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
